extends ../layouts/app.pug
include ../mixins/form.pug
block content
  .container
    .row.justify-content-center
      .col-md-8.col-md-offset-2
        .panel.panel-default
          .panel-heading Register an account
          .panel-body
            form(method="POST" action="/register" novalidate)
              include ../shared/csrf-input.pug
              +inline-input({ name: 'name', label: 'Name', type: "text", value: user.name, errors: errors })
              +inline-input({ name: 'avatar', label: 'Avatar', type: "text", value: user.avatar, errors: errors })
              +inline-input({ name: 'email', label: 'Email', type: "email", value: user.email, errors: errors })
              +inline-input({ name: 'password', label: 'Password', type: "password", errors: errors })
              +inline-input({ name: 'passwordConfirmation', label: 'Password confirmation', type: "password", errors: errors })
              .form-group.row
                .col-md-12
                  button.btn.btn-primary.pull-right(type='submit') Submit

