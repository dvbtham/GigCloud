nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(data-toggle="collapse", data-target=".navbar-collapse")
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") Gig Cloud
    .navbar-collapse.collapse
      if isAuthenticated
        ul.nav.navbar-nav
          li(class=path === "/add-a-gig" ? "active" : "")
            a.navbar-brand(href="/add-a-gig") Add a gig
      ul.nav.navbar-nav.navbar-right
        if isAuthenticated
          li.notifications
            a(href="#")
              i.glyphicon.glyphicon-globe
              span.badge.js-notifications-count.hide 0
          li.dropdown
            a.dropdown-toggle.pointer(data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{currentUser.name}
            ul.dropdown-menu
              li
                a(href="/profile") My profile
              li
                a(href="/my-upcoming-gigs") My upcoming gigs
              li
                a(href="/going-gigs") Gigs I'm Going
              li
                a(href="/profile") Artist I'm following
              li.divider(role="separator")
              li.logout
                form(action="/logout" method="post")
                  include csrf-input.pug
                  button.btn.btn-primary.btn-logout.text-left(type='submit') Logout
        else
          li(class=path === "/register" ? "active" : "")
            a(href="/register") Register
          li(class=path === "/login" ? "active" : "")
            a(href="/login") Login
